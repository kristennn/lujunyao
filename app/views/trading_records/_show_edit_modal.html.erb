<!-- 编辑工资弹框代码-开始 -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" style="margin-top:100px;">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
        <h4 class="modal-title" id="myModalLabel">
          编辑交易记录
        </h4>
      </div> 
      <div class="modal-body">
        <% if @trading_record.present? %>
          <%= form_tag trading_record_path(@trading_record.id), method: 'patch' do %>
            <div class="star_import_model_file_style">
              <ul class ="star_import_model">
                <li>
                  <%= label_tag "交易数量：" %>
                  <%= text_field_tag :quantity, nil, required: true %>
                </li> 
                <li>
                  <%= label_tag "折扣：" %>
                  <%= text_field_tag :discount, nil, required: true %>
                </li>
                <li>
                  <%= label_tag "员工姓名：" %>
                  <%= select_tag(:employee_name, options_for_select(Employee.all.collect{ |u| u.name }), {:prompt => "请选择", :required => "true"}) %>
                </li>
              </ul>
            </div>
            <div class="" style="">
               <%= submit_tag :点击确定, :class => "btn btn-primary-status" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- 编辑工资弹框代码-结束 -->